<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rate_text1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/rate_text2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_below="@+id/rate_text1"
        android:layout_alignLeft="@+id/rate_text1"
        android:layout_alignStart="@+id/rate_text1" />

    <TextView
        android:id="@+id/rate_text3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_below="@+id/rate_text2"
        android:layout_alignLeft="@+id/rate_text2"
        android:layout_alignStart="@+id/rate_text2"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/rate_text4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_below="@+id/rate_text3"
        android:layout_alignLeft="@+id/rate_text3"
        android:layout_alignStart="@+id/rate_text3" />

    <TextView
        android:id="@+id/rate_text5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_below="@+id/rate_text4"
        android:layout_alignLeft="@+id/rate_text4"
        android:layout_alignStart="@+id/rate_text4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/rate_text5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ADD"
            android:id="@+id/btnAdd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_button"
            android:layout_marginRight="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CLEAR"
            android:id="@+id/btnClear"
            android:layout_alignBottom="@+id/btnRead"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="@drawable/selector_button"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="TO DATE"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnAdd"
            android:layout_toLeftOf="@+id/btnClear"
            android:layout_toStartOf="@+id/btnClear"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Date:"
        android:layout_alignTop="@+id/rate_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Base:"
        android:layout_below="@+id/rate_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="USD:"
        android:layout_below="@+id/rate_text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="EUR:"
        android:layout_below="@+id/rate_text3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="GBP:"
        android:layout_alignTop="@+id/rate_text5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
