<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rate_text1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/rate_text2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_below="@+id/rate_text1"
        android:layout_alignLeft="@+id/rate_text1"
        android:layout_alignStart="@+id/rate_text1" />

    <TextView
        android:id="@+id/rate_text3"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_below="@+id/rate_text2"
        android:layout_alignLeft="@+id/rate_text2"
        android:layout_alignStart="@+id/rate_text2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/rate_text4"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_below="@+id/rate_text3"
        android:layout_alignLeft="@+id/rate_text3"
        android:layout_alignStart="@+id/rate_text3" />

    <TextView
        android:id="@+id/rate_text5"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_below="@+id/rate_text4"
        android:layout_alignLeft="@+id/rate_text4"
        android:layout_alignStart="@+id/rate_text4" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/linearLayout"
        android:layout_alignRight="@+id/rate_text2"
        android:layout_alignEnd="@+id/rate_text2"
        android:layout_below="@+id/rate_text5">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="ADD"
            android:id="@+id/btnAdd"
            android:layout_above="@+id/btnClear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="CLEAR"
            android:id="@+id/btnClear"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="TO DATE"
            android:id="@+id/button"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:text="Date:"
        android:layout_alignTop="@+id/rate_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:text="Base:"
        android:layout_below="@+id/rate_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:text="USD:"
        android:layout_below="@+id/rate_text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:text="EUR:"
        android:layout_below="@+id/rate_text3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="GBP:"
        android:layout_alignTop="@+id/rate_text5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />


</RelativeLayout>
