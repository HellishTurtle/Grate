<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/background_card1"
        android:background="@drawable/grad1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/button5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-20dp" />

    <TextView
        android:id="@+id/rate_text1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/rate_text2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/rate_text1"
        android:layout_alignStart="@+id/rate_text1" />

    <TextView
        android:id="@+id/rate_text3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/rate_text2"
        android:layout_alignLeft="@+id/rate_text2"
        android:layout_alignStart="@+id/rate_text2"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/rate_text4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/rate_text3"
        android:layout_alignLeft="@+id/rate_text3"
        android:layout_alignStart="@+id/rate_text3"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/rate_text5"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="30dp"
        android:layout_below="@+id/rate_text4"
        android:layout_alignLeft="@+id/rate_text4"
        android:layout_alignStart="@+id/rate_text4"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button5"
        android:layout_marginTop="20dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/add"
            android:id="@+id/btnAdd"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/to_date"
            android:id="@+id/button"
            android:layout_gravity="bottom"
            android:background="@drawable/selector_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/clear"
            android:id="@+id/btnClear"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/btnAdd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/button1"
        android:textSize="30dp"
        android:text="@string/date"
        android:layout_alignTop="@+id/rate_text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/button2"
        android:textSize="30dp"
        android:text="Base:"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/button3"
        android:textSize="30dp"
        android:text="USD:"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/button4"
        android:textSize="30dp"
        android:text="EUR:"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/button5"
        android:textSize="30dp"
        android:text="GBP:"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
